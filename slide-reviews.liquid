{{ 'slide-reviews.css' | asset_url | stylesheet_tag }}

<div class="slide_reviews">
  <div class="swiper reviews_swiper">
    <div class="swiper-wrapper">
      {%- for block in section.blocks -%}
        <div class="swiper-slide">
          <div class="slide_avatar">
            <img src="{{ block.settings.avatar_image | img_url: '1500x' }}" alt="{{ block.settings.avatar_image.alt }}" width="" height="">
          </div>
          <div class="slide_text">
            <div class="slide_name">{{ block.settings.text_name | escape }}</div>
            <div class="slide_content">{{ block.settings.text_content | escape }}</div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
  <div class="swiper-pagination preview_slide_pagination"></div> 
</div>

<script src="{{ 'slide-reviews-swiper.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Previews swiper",
  "tag": "section",
  "settings": [],
  "blocks": [
    {
      "type": "column",
      "name": "Previews Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "avatar_image",
          "label": "Avatar"
        },
        {
          "type": "text",
          "id": "text_name",
          "default": "name",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "text_content",
          "default": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": []
}
{% endschema %}