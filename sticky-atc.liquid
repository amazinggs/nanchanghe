{%- liquid
  assign image = product.featured_image
  if first_3d_model and product.media.size < 2
    for media in product.media
      assign image = media
    endfor
  endif
-%}
{{ 'sticky-atc.css' | asset_url | stylesheet_tag }}
<div class="my_sticky_addtocart" data-view="sticky-atc">
  <div class="my_sticky_addtocart_container">
    <sticky-atc class="my_sticky_addtocart_flex" data-product-id="{{ product.id }}">
      <div class="my_sticky_addtocart_flex_leftblock">
        <div class="my_sticky_addtocart_image">
          {%- if image -%}
            {% render 'responsive-image', image: image, sizes: '100x', aspect_ratio: 1 %}
          {%- else -%}
            {{ 'product-1' | placeholder_svg_tag: 'm-placeholder-svg' }}
          {%- endif -%}
        </div>
        <div class="my_sticky_addtocart_title">
          <h3>{{ product.title }}</h3>
        </div>
      </div>
      <div class="my_sticky_addtocart_flex_rightblock">
        {%- assign product_form_id = 'sticky-atc-form-' | append: section.id -%}
        <product-form>
          {%- form 'product',
            product,
            id: product_form_id,
            data-product-id: product.id,
            class: 'my_sticky_addtocart_form',
            novalidate: 'novalidate',
            data-type: 'add-to-cart-form'
          -%}
            <div id="price-{{ section.id }}" class="my_sticky_addtocart_price" role="status" {{ block.shopify_attributes }}>
              {%- render 'price', product: product, use_variant: true, show_badges: true, -%}
            </div>
            <div class="my_sticky_addtocart_form_button">
              {%- render 'buy-buttons',
                block: block,
                product: product,
                product_form_id: product_form_id,
                section_id: section.id,
                show_pickup_availability: true,
              -%}
            </div>
          {%- endform -%}
        </product-form>
      </div>
    </sticky-atc>
  </div>
  <script type="application/json">{{ product.variants | json }}</script>
</div>
<script src="{{ 'sticky-add-to-cart.js' | asset_url }}" defer="defer"></script>